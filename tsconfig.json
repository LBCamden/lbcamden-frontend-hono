{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/types",
    "target": "es2016",
    "module": "ES2015",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.AsyncIterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": ["src"]
}
